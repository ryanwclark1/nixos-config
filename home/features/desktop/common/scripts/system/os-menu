  case $(menu "Restart" "î˜¸  Audio\nó±š¾  Wi-Fi\nó°‚¯  Bluetooth") in
  *Audio*) present_terminal os-restart-pipewire ;;
  *Wi-Fi*) present_terminal os-restart-wifi ;;
  *Bluetooth*) present_terminal os-restart-bluetooth ;;
